@model  IEnumerable<BlogMvc.Web.Models.Post>
@{
    ViewBag.Title = "Blog | Elephant-Rose.com";
}



<div class="page-header">
    <h1>Blog</h1>
    <p class="lead">Welcome on my blog</p>
</div>

@foreach (var item in Model)
{
    @Html.DisplayFor(modelItem => item, "PostPreview")
}

@{
    Html.RenderAction("Pager", new { id = ViewBag.id });
}